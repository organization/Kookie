<configuration>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <!-- Pattern -->
            <pattern>
                %nopex[%d{HH:mm:ss.SSS}] %highlight([%-5level]) [%thread] %cyan([%logger{0}]): %msg%n%ex
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>

</configuration>
